<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/qty"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/price"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="Quantity" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageview"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="Name" />

    <TextView
        android:id="@+id/brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toEndOf="@id/imageview"
        android:textColor="@color/black"
        tools:text="Brand Name" />

    <TextView
        android:id="@+id/price"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="Price" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/imageview"
        android:layout_marginTop="10dp"
        android:background="#DAD8D8"/>

    <Button
        android:id="@+id/qtyUp"
        android:layout_width="34dp"
        android:layout_height="30dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/qty"
        android:background="@drawable/plus"
        android:contentDescription="@string/qtyUp"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/qtyDown"
        android:layout_width="34dp"
        android:layout_height="30dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="38dp"
        android:layout_toStartOf="@+id/qty"
        android:background="@drawable/minus"
        android:contentDescription="@string/qtyUp"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/garbage"
        android:layout_width="34dp"
        android:layout_height="30dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="32dp"
        android:layout_toStartOf="@+id/qtyDown"
        android:background="@drawable/delete_item"
        android:contentDescription="@string/delete"
        tools:ignore="TouchTargetSizeCheck" />

</RelativeLayout>